@model ManageLibraryItemsAndEmployees.Data.Entities.Category

@{
    ViewData["Title"] = @Html.DisplayFor(model => model.CategoryName);
}

<div>
    <h1>Category name: /@Html.DisplayFor(model => model.CategoryName); /</h1>
   
    <br />

    <h3>LibraryItems</h3>
    <ul>
        @foreach (var item in Model.LibraryItems)
        {
            <li>@item.Author, @item.Title</li>
        }
    </ul>  
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
